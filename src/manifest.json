{
	"manifest_version": 2,
	"name": "Warpgate",
	"version": "0.0.0",
	"description": "Jump to various external bookmarks via the address bar.",
  "homepage_url": "https://github.com/cheap-glitch/warpgate#readme",
	"developer" : {
		"name": "cheap glitch",
		"url": "https://github.com/cheap-glitch"
	},
	"minimum_chrome_version": "88",
	"applications": {
		"gecko": {
			"id": "warpgate--dev@cheap-glitch.org",
			"strict_min_version": "84.0"
		}
	},
	"permissions": [
    "notifications",
		"storage"
	],
  "icons": {
    "128": "icon.png"
  },
  "options_ui": {
    "chrome_style": true,
    "browser_style": true,
    "page": "options.html"
  },
	"background": {
		"scripts": [
			"../node_modules/webextension-polyfill/dist/browser-polyfill.min.js",
			"index.ts"
		]
	},
	"omnibox": {
		"keyword": "@"
	},
  "commands": {
    "refresh-data": {
      "suggested_key": {
        "default": "Alt+W"
      },
      "description": "Trigger an immediate refresh of the warp targets"
    }
  }
}
