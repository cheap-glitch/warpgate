{
	"manifest_version": 2,
	"name": "Warpgate",
	"description": "Jump to various external bookmarks via the address bar.",
	"version": "1.1",
	"applications": {
		"gecko": {
			"id": "warpgate--dev@cheap-glitch.org"
		}
	},
	"developer" : {
		"name": "cheap glitch",
		"url": "https://github.com/cheap-glitch"
	},
	"permissions": [
    "notifications",
		"storage"
	],
  "icons": {
    "48": "icon/48x48.png",
    "96": "icon/96x96.png"
  },
	"background": {
		"page": "pages/background.html"
	},
  "options_ui": {
    "page": "pages/options.html",
    "browser_style": true,
    "chrome_style": true
  },
	"omnibox": {
		"keyword": "@"
	},
  "commands": {
    "refresh-data": {
      "suggested_key": {
        "default": "Alt+W"
      },
      "description": "Trigger an immediate refresh of the warp targets"
    }
  }
}
