{
  "private": true,
  "name": "warpgate",
  "version": "1.1.0",
  "description": "A lightweight browser extension to jump to various external bookmarks via the address bar.",
  "license": "MPL-2.0",
  "author": "cheap glitch <cheap.glitch@gmail.com> (https://github.com/cheap-glitch)",
  "repository": "cheap-glitch/warpgate",
  "homepage": "https://github.com/cheap-glitch/warpgate#readme",
  "bugs": "https://github.com/cheap-glitch/warpgate/issues",
  "funding": "https://github.com/sponsors/cheap-glitch",
  "keywords": [
    "address",
    "browser",
    "extension",
    "firefox",
    "github",
    "jump",
    "navigation",
    "omnibar",
    "productivity",
    "repos",
    "stars",
    "webext",
    "webextension"
  ],
  "scripts": {
    "build": "tsc",
    "build:clean": "empty-dir dist && npm run build",
    "build:watch": "tsc --watch",
    "lint": "eslint . --ext .js,.ts --ignore-path .gitignore",
    "package": "web-ext lint && node scripts/pacakge.js",
    "postinstall": "cp --force node_modules/webextension-polyfill/dist/browser-polyfill.min.js src/scripts/browser-polyfill.js"
  },
  "webExt": {
    "sourceDir": "dist",
    "run": {
      "keepProfileChanges": true,
      "firefoxProfile": "./test/web-ext-profile",
      "chromiumProfile": "./test/web-ext-profile",
      "startUrl": [
        "https://github.com",
        "about:debugging#/runtime/this-firefox"
      ]
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": "@cheap-glitch/typescript",
    "plugins": [
      "no-unsanitized"
    ],
    "env": {
      "es6": true,
      "browser": true,
      "webextensions": true
    },
    "overrides": [
      {
        "files": [
          "scripts/*.js"
        ],
        "env": {
          "node": true
        }
      }
    ],
    "ignorePatterns": [
      "src/scripts/browser-polyfill.js"
    ]
  },
  "dependencies": {
    "webextension-polyfill": "^0.8.0"
  },
  "devDependencies": {
    "@cheap-glitch/eslint-config-typescript": "^2.4.1",
    "@cheap-glitch/tsconfig": "^1.0.0",
    "@types/firefox-webext-browser": "^94.0.1",
    "cross-zip": "^4.0.0",
    "empty-dir-cli": "^1.0.2",
    "eslint": "^8.11.0",
    "eslint-plugin-no-unsanitized": "^4.0.1",
    "eslint-plugin-smarter-tabs": "^1.2.0",
    "fs-extra": "^10.0.1",
    "html-minifier": "^4.0.0",
    "jest": "^27.5.1",
    "klaw-sync": "^6.0.0",
    "terser": "^5.12.1",
    "typescript": "^4.6.2",
    "web-ext": "^6.7.0"
  }
}
