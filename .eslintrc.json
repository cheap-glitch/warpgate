{
	"root": true,

	"parserOptions": {
		"sourceType": "module",
		"ecmaVersion": 2018
	},

	"plugins": [
		"smarter-tabs",
    "no-unsanitized"
	],

	"env": {
		"es6":            true,
		"node":           true,
		"browser":        true,
    "webextensions":  true
	},

	"extends": "eslint:recommended",

	"rules": {
		"no-mixed-spaces-and-tabs":  ["warn", "smart-tabs"],
		"smarter-tabs/smarter-tabs": "warn"
	},

	"overrides": [{
		"files": ["test/*.test.js", "tests/unit/*.spec.js"],
		"env": {
			"mocha": true
		}
	}]
}
